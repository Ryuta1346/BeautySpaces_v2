main.col-md-9.ml-sm-auto.col-lg-10.px-4[role="main"]
  h2
    | Edit 
    = @stylist.name
  = form_for(@stylist, url: admin_stylist_path) do |f|
    - #= render 'shared/error_messages', object: f.object
    .field
      = f.label :category
      br
      = f.collection_select :category_id, Category.all, :id, :name
    .field
      = f.label :name
      br
      = f.text_field :name
    .field
      = f.label :都道府県
      br
      = f.collection_select :prefecture_id, Prefecture.all, :id, :name
    .field
      = f.label :市区町村
      br
      = f.text_field :city
    .field
      = f.label :住所
      br
      = f.text_field :address1
    .field
      = f.label :tel
      br
      = f.telephone_field :tel
    .field
      = f.label :features
      br
      = f.text_field :features
    .actions
      = f.submit "Update"
  h3
    | Delete Stylist
  p
    = button_to "Delete Stylist", admin_stylist_path, data: { confirm: "Are you sure?" }, method: :delete
  = link_to "Back", admin_salon_path
